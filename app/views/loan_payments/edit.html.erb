<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Edit Loan Payment</h1>

  <%= form_with(model: [@loan_book, @loan_payment], local: true) do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="mb-4">
        <%= form.label :amount, "Loan Amount", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :amount, step: 0.01, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :given_by, "Lender", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :given_by, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :given_to, "Borrower", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :given_to, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :witness, "Witness", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_field :witness, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :given_date, "Date Given", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.date_field :given_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :due_date, "Due Date", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.date_field :due_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :total_receivable, "Total Receivable", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :total_receivable, step: 0.01, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= form.label :received_amount, "Amount Received", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.number_field :received_amount, step: 0.01, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4 col-span-2">
        <%= form.label :notes, "Notes", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.text_area :notes, rows: 3, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4 col-span-2">
        <%= form.label :document, "Attach Document", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= form.file_field :document, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
        <% if @loan_payment.document.attached? %>
          <div class="mt-2">
            <span class="text-sm text-gray-600">Current file: <%= @loan_payment.document.filename %></span>
            <%= link_to 'Remove', purge_document_book_loan_loan_payment_path(@loan_book, @loan_payment), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-sm text-red-600 hover:text-red-800 ml-2" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="flex items-center justify-between mt-6">
      <%= form.submit "Update Loan Payment", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to 'Cancel', [@loan_book, @loan_payment], class: "inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800" %>
    </div>
  <% end %>
</div>