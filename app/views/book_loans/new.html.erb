<div class="container mx-auto px-4 py-8 max-w-md">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Create New Loan Book</h1>

  <%= form_with(model: @loan_book, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :name, "Loan Book Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Create Loan Book", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to 'Cancel', book_loans_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
</div>