<!-- Animated Background Elements -->
<div class="fixed inset-0 overflow-hidden -z-10">
  <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-indigo-900/30 to-gray-900"></div>
  <div class="absolute inset-0 opacity-25">
    <div class="absolute top-1/4 left-1/4 w-64 h-64 rounded-full bg-violet-600 filter blur-3xl opacity-20 animate-pulse"></div>
    <div class="absolute top-2/3 left-1/3 w-80 h-80 rounded-full bg-blue-600 filter blur-3xl opacity-15 animate-pulse animation-delay-2000"></div>
    <div class="absolute top-1/3 right-1/4 w-72 h-72 rounded-full bg-pink-600 filter blur-3xl opacity-15 animate-pulse animation-delay-4000"></div>
  </div>
</div>

<!-- Hero Section - Now with fixed device height -->
<section class="container mx-auto px-6 h-[calc(100vh-80px)] min-h-[600px] flex items-center">
  <div class="flex flex-col md:flex-row items-center w-full">
    <div class="md:w-1/2 mb-12 md:mb-0">
      <h1 class="text-4xl md:text-6xl font-bold leading-tight mb-6 font-exo">
        <span class="bg-gradient-to-r from-violet-600 to-blue-500 bg-clip-text text-transparent">Modern</span><br>
        <span class="text-white">Loan Management</span>
      </h1>
      <p class="text-lg text-gray-300 mb-8 max-w-lg">
        Streamline your lending operations with our intuitive platform designed for financial professionals.
      </p>
      <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
        <%= link_to "Get Started", new_user_registration_path, class: "px-8 py-3 rounded-full bg-gradient-to-r from-violet-600 to-blue-500 text-white font-medium hover:shadow-lg hover:shadow-violet-500/30 transition-all duration-300 transform hover:scale-105" %>
        <% if user_signed_in? %>
          <%= link_to "Go To Dashboard", book_loans_path, class: "px-8 py-3 rounded-full bg-gray-800 border border-blue-400/30 text-white font-medium hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300 transform hover:scale-105 hover:bg-gray-700/50" %>
        <% end %>
      </div>
    </div>
    <div class="md:w-1/2 relative">
      <div class="relative z-10 w-full max-w-lg mx-auto">
        <div class="absolute -top-10 -left-10 w-64 h-64 bg-violet-600 rounded-full filter blur-xl opacity-20"></div>
        <div class="absolute -bottom-10 -right-10 w-64 h-64 bg-blue-500 rounded-full filter blur-xl opacity-20"></div>
        <div class="relative backdrop-blur-sm bg-gray-800/70 border border-blue-400/30 rounded-2xl overflow-hidden shadow-2xl animate__animated animate__fadeIn">
          <div class="p-1 bg-gradient-to-r from-violet-600 to-blue-500">
            <div class="bg-gray-900 p-6">
              <div class="flex justify-between items-center mb-6">
                <h3 class="text-lg font-semibold text-white">Loan Dashboard</h3>
                <span class="text-xs px-2 py-1 rounded-full bg-blue-500/20 text-blue-300">LIVE</span>
              </div>
              <div class="space-y-4">
                <div class="flex justify-between items-center p-4 bg-gray-800/50 rounded-lg border border-blue-400/20">
                  <div>
                    <p class="text-sm text-gray-400">Active Loans</p>
                    <p class="text-2xl font-bold text-blue-300">12</p>
                  </div>
                  <div class="w-12 h-12 rounded-full bg-blue-500/10 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                </div>
                <div class="grid grid-cols-2 gap-4">
                  <div class="p-4 bg-gray-800/50 rounded-lg border border-amber-400/20">
                    <p class="text-sm text-gray-400">Pending</p>
                    <p class="text-xl font-bold text-amber-300">$24,500</p>
                  </div>
                  <div class="p-4 bg-gray-800/50 rounded-lg border border-emerald-400/20">
                    <p class="text-sm text-gray-400">Completed</p>
                    <p class="text-xl font-bold text-emerald-300">$78,200</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>