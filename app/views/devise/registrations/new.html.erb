<div class="min-h-screen bg-gradient-to-br from-gray-900 to-blue-900 flex items-center justify-center p-4">
  <div class="w-full max-w-xl space-y-8"> <!-- Changed from max-w-md to max-w-xl -->
    <div class="text-center">
      <h2 class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-violet-600 to-blue-500">
        Create Account
      </h2>
      <p class="mt-2 text-sm text-gray-300">
        Join QuantumLend to manage your loans efficiently
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                 html: { class: "mt-8 space-y-6 backdrop-blur-sm bg-white/10 p-8 rounded-xl border border-white/10 shadow-2xl w-full" }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="rounded-md shadow-sm space-y-4">
        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-blue-100" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
              </svg>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                              class: "bg-gray-800/50 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 pr-3 py-3 border border-gray-700 rounded-md text-white placeholder-gray-400 focus:outline-none transition duration-200" %>
          </div>
        </div>

        <!-- Name Field -->
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-blue-100" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
              </svg>
            </div>
            <%= f.text_field :name, autocomplete: "name",
                             class: "bg-gray-800/50 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 pr-3 py-3 border border-gray-700 rounded-md text-white placeholder-gray-400 focus:outline-none transition duration-200" %>
          </div>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-blue-100" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-400">(<%= @minimum_password_length %> characters minimum)</p>
          <% end %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
            </div>
            <%= f.password_field :password, autocomplete: "new-password",
                                 class: "bg-gray-800/50 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 pr-3 py-3 border border-gray-700 rounded-md text-white placeholder-gray-400 focus:outline-none transition duration-200" %>
          </div>
        </div>

        <!-- Password Confirmation -->
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-blue-100" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                                 class: "bg-gray-800/50 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 pr-3 py-3 border border-gray-700 rounded-md text-white placeholder-gray-400 focus:outline-none transition duration-200" %>
          </div>
        </div>
      </div>

      <div>
        <%= f.submit "Sign up",
                     class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-gradient-to-r from-violet-600 to-blue-500 hover:from-violet-700 hover:to-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-lg transform hover:scale-105 transition duration-200" %>
      </div>

    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>