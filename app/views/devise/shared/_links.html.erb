<div class="space-y-3 mt-6">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name),
                class: "w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-sm transition duration-200" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Create new account", new_registration_path(resource_name),
                class: "w-full flex justify-center py-2 px-4 border border-blue-500 text-sm font-medium rounded-md text-blue-400 hover:text-white hover:bg-blue-500/20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-sm transition duration-200" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot password?", new_password_path(resource_name),
                class: "w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-blue-400 hover:text-blue-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Resend confirmation", new_confirmation_path(resource_name),
                class: "w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-blue-400 hover:text-blue-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Resend unlock instructions", new_unlock_path(resource_name),
                class: "w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-blue-400 hover:text-blue-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}",
                    omniauth_authorize_path(resource_name, provider),
                    data: { turbo: false },
                    class: "w-full flex justify-center py-2 px-4 border border-gray-700 text-sm font-medium rounded-md text-white bg-gray-800/50 hover:bg-gray-700/50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-sm transition duration-200" %>
    <% end %>
  <% end %>
</div>