<% if resource.errors.any? %>
  <div id="error_explanation"
       class="backdrop-blur-sm bg-red-900/20 border border-red-700/50 rounded-xl p-6 mb-6 shadow-lg animate-fade-in"
       data-turbo-cache="false">
    <div class="flex items-start">
      <!-- Animated X icon -->
      <div class="flex-shrink-0 p-1 mr-3 rounded-full bg-gradient-to-br from-red-600 to-red-900/80">
        <svg class="w-5 h-5 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
      </div>

      <div class="space-y-2">
        <!-- Gradient error heading -->
        <h2 class="text-lg font-bold text-transparent bg-clip-text bg-gradient-to-r from-red-400 to-pink-300">
          <%= I18n.t("errors.messages.not_saved",
                     count: resource.errors.count,
                     resource: resource.class.model_name.human.downcase) %>
        </h2>

        <!-- Error messages list with animated entries -->
        <ul class="space-y-1.5">
          <% resource.errors.full_messages.each do |message| %>
            <li class="flex items-center text-sm text-red-200 before:content-[''] before:w-1.5 before:h-1.5 before:rounded-full before:bg-red-500 before:mr-2 before:animate-pulse">
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Add this to your stylesheet or Tailwind config -->
  <style>
      @keyframes fadeIn {
          from { opacity: 0; transform: translateY(-10px); }
          to { opacity: 1; transform: translateY(0); }
      }
      .animate-fade-in {
          animation: fadeIn 0.3s ease-out forwards;
      }
  </style>
<% end %>